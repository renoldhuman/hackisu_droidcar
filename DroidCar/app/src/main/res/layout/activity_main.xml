<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation = "vertical"
    tools:context="com.example.android.droidcar.MainActivity"
    android:weightSum="1">


    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="250dp"
        android:layout_height="65dp"
        android:rotation="270"
        android:minHeight="4dip"
        android:minWidth="4dip"
        android:max="4095"
        android:paddingHorizontal="250dp"
        android:paddingVertical="250dp"
        tools:layout_editor_absoluteX="107dp"
        tools:layout_editor_absoluteY="178dp"
        android:layout_marginTop="64dp"
        android:layout_alignTop="@+id/textView"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/brakeButton"
        android:layout_width="125dp"
        android:layout_height="75dp"
        android:text="Brake"
        android:layout_alignTop="@+id/textView"
        android:layout_alignEnd="@+id/rightTurn" />

    <ToggleButton
        android:id="@+id/shiftButton"
        android:layout_width="125dp"
        android:layout_height="75dp"
        android:text="Shift"
        android:textOff="Reverse"
        android:textOn="Drive"
        android:layout_marginTop="24dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="47dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="25dp"
        android:layout_height="200dp"
        android:text="T\nH\nR\nO\nT\nT\nL\nE"
        android:textSize="20dp"
        android:textAlignment="center"
        android:layout_marginEnd="23dp"
        android:layout_alignTop="@+id/shiftButton"
        android:layout_alignEnd="@+id/neutral" />

    <Button
        android:id="@+id/leftTurn"
        android:layout_width="125dp"
        android:layout_height="75dp"
        android:text="Left"
        android:layout_alignBottom="@+id/neutral"
        android:layout_alignStart="@+id/shiftButton" />

    <Button
        android:id="@+id/rightTurn"
        android:layout_width="125dp"
        android:layout_height="75dp"
        android:text="Right"
        android:layout_marginEnd="30dp"
        android:layout_alignBottom="@+id/neutral"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/neutral"
        android:layout_width="125dp"
        android:layout_height="75dp"
        android:text="Neutral"
        android:layout_marginBottom="8dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
