<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation = "vertical"
    tools:context="com.example.android.droidcar.MainActivity"
    android:weightSum="1">


    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="300dp"
        android:layout_height="75dp"
        android:rotation="270"
        android:minHeight="4dip"
        android:minWidth="4dip"
        android:max="4095"
        tools:layout_editor_absoluteX="107dp"
        tools:layout_editor_absoluteY="178dp"
        android:layout_marginEnd="36dp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/brakeButton"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:text="Brake"
        android:layout_below="@+id/seekBar"
        android:layout_toStartOf="@+id/seekBar"
        android:layout_marginEnd="60dp" />

    <ToggleButton
        android:id="@+id/shiftButton"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:text="Shift"
        android:textOff="Reverse"
        android:textOn="Drive"
        android:layout_above="@+id/seekBar"
        android:layout_alignStart="@+id/brakeButton" />


</RelativeLayout>
